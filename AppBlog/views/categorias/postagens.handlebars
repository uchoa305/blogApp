<h2 class="mt-3">Lista de Posts - {{categoria.nome}}</h2>
<hr>
{{#each postagens}} 
    <div class="card mb-2">
        <div class="card-body mb-6">  
            <div class="row">
                <h4 class="card-title mb-3">{{titulo}}</h4>
                <p class="card-text"> {{descricao}}</p>
                <div class="col-3">
                    <a class="btn btn-outline-primary" href="/postagens/{{slug}}">Ver mais</a> 
                </div>
            </div> 
            <hr class="text-muted">
             <small class="card-subtitle mb-3 text-muted">{{data}}</small>
        </div>
        
    </div>
{{else}}
<h4 class="mt-3"> Nenhuma postagem registrada</h4>
    <img src="/img/astro.jpg" class="img-thumbnail" width="400px" height="300px" alt="Sem resultados">
{{/each}}