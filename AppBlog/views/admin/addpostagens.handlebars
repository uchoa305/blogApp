{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Nova postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/add" method="POST">
            <label>Titulo:</label> 
                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="titulo do post">
            <label class="mt-2">Slug:</label> 
                <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug do post ex: novo-post">
            <label class="mt-2">Descrição:</label> 
                <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Decrição do post" >
            <label class="mt-2">Categoria:</label> 
                <select class="form-control" id="categoria" name="categoria" multiple  size="3">
                    {{#each categorias}}
                        <option value="{{id}}">{{nome}}</option>
                        {{else}}
                        <option value="0">Nenhuma categoria cadastrada</option>
                    {{/each}}
                    </select>
            <label class="mt-2">Conteudo:</label>    
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Conteudo do Post" id="conteudo" name="conteudo" style="height:250px"></textarea>
                    <label for="floatingTextarea2">Corpo do post</label>
                </div>
            <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
        </form>
    </div>
</div>