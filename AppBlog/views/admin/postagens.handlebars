<h2>Lista de postagens:</h2>
<hr>
<a href="./postagens/add" ><button class="btn btn-success mb-3">Nova Postagem </button></a>

{{#each postagens}}
   <div class="card mb-2">
        <div class="card-body mb-8">
            <h5 class="card-title">{{titulo}}</h5>
            <h6 class="card-subtitle mb-3 mt-3 text-muted">Slug: {{slug}}</h6> 
             <h6 class="card-subtitle mb-3 text-muted">Descrição: {{descricao}}</h6>
             <h6 class="card-subtitle mb-3 text-muted">Categoria: {{categoria.nome}}</h6>
            <h6 class="card-subtitle mb-4 text-muted">Data de criação: {{data}}</h6>
            <div class="row row-cols-2">
                <div class="col-md-auto">
                    <a href="/admin/postagens/edit/{{_id}}" ><button class="btn btn-primary btn-sm">Editar</button></a>
                </div>  
                <div class="col-md-auto">
                    <a href="/admin/postagens/deletar/{{_id}}" ><button class="btn btn-danger btn-sm">Deletar</button></a>
                </div>      
            </div>
        </div>
        
    </div>
{{else}}
    <h4 class="mt-3"> Nenhuma postagem registrada</h4>
    <img src="/img/sem_resultados.jpg" class="img-thumbnail" width="400px" height="300px" alt="Sem resultados">
{{/each}}