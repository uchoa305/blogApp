{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Nova postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
           <input type="hidden" name="id" value="{{postagem.id}}">
            <label>Titulo:</label> 
                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="titulo do post" value="{{postagem.titulo}}" required>
            <label class="mt-2">Slug:</label> 
                <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug do post ex: novo-post" value="{{postagem.slug}}" required>
            <label class="mt-2">Descrição:</label> 
                <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Decrição do post" value="{{postagem.descricao}}" required >
            <label class="mt-2">Categoria:</label> 
                <select class="form-control" id="categoria" name="categoria" multiple  size="3" required>
                    {{#each categorias}}
                        <option value="{{id}}">{{nome}}</option>
                        {{else}}
                        <option value="0">Nenhuma categoria cadastrada</option>
                    {{/each}}
                    </select>
            <label class="mt-2">Conteudo:</label>    
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Conteudo do Post" id="conteudo" name="conteudo" style="height:250px" required>{{postagem.conteudo}}</textarea>
                    <label for="floatingTextarea2">Corpo do post</label>
                </div>
            <button type="submit" class="btn btn-success mt-4">Editar</button>
        </form>
    </div>
</div>